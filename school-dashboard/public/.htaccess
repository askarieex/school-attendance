<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 1. Let actual files (images, css, js) be served directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2. Redirect everything else to index.html so React Router handles it
  RewriteRule ^ index.html [L]
</IfModule>
